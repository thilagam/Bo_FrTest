						<td><b>Content :</b></td>
						<td><span><textarea name="content" id="content" class="span6 auto_expand" rows="35">{$termcontent}</textarea></span></td>
					</tr>
					<tr>
						<td></td>
						<td>	
							<input type="submit" id="term_submit" name="term_submit" value="Save" class="btn btn-info"/>
