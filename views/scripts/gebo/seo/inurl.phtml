<form class="form_validation_reg" method="POST" action="" name="inurl" id="seo" ENCTYPE="multipart/form-data">
    <div class="span10">

        <h3 class="heading">Inurl dev</h3>

        <div class="control-group formSep" id="seotool-notify" style="display: none;">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <div id="seo-message">
                        {$msg}
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3">Url(s)</label>
                    <div class="span8 form-inline no-margin-first">
                        <textarea class="span10" name="urls"></textarea>
			<!--<input type="text" value="" class="span10" name="urls">
                        <span class="help-block syntax">Enter multiple urls seperated by comma</span>-->
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3">Keyword(s)<span class="f_req">*</span></label>
                    <div class="span8 form-inline no-margin-first">
                        <textarea class="span10" name="keyword"></textarea>
                        <span class="help-block syntax">(Min 1 kw)</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3">Search engine</label>
                    <div class="span8 no-margin-first">
                        <label class="uni-radio"><input type="radio" name="search_engine" class="uni_style" id="search_engine_fr" value="1" checked="checked">Google.fr</label>
                        <label class="uni-radio"><input type="radio" name="search_engine" class="uni_style" id="search_engine_com" value="2">Google.com</label>
                        <label class="uni-radio"><input type="radio" name="search_engine" class="uni_style" id="search_engine_in" value="4">Google.co.in</label>
                        <label class="uni-radio"><input type="radio" name="search_engine" class="uni_style" id="search_engine_uk" value="5">Google.co.uk</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3">Options<span class="f_req">*</span></label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="inurl" checked="checked" />in url  
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="allinurl" /> all in url  
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="intitle" /> in title  
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="allintitle" /> all in title  
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="intext" /> in text
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="allintext" /> all in text
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="inanchor" /> in anchor
                    </label>
                    <label class="uni-checkbox">
                        <input type="checkbox" class="uni_style" name="option[]" value="allinanchor" /> all in anchor
                    </label>
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3">Results limit</label>
                     <!--<select name="limit" id="chosen_c" class="chzn_c span3">
                        <option value="1">1</option><option value="2">2</option><option value="3">3</option>
                        <option value="4">4</option><option value="5" selected="selected">5</option>
                        <option value="6">6</option><option value="7">7</option><option value="8">8</option>
                        <option value="9">9</option><option value="10">10</option>
                     </select>-->
                     <input type="text" value="" class="span3" name="limit">
                </div>
            </div>
        </div>
        <div class="control-group formSep">
            <div class="row-fluid">
                <div class="span12">
                    <label class="span3">&nbsp;</label>
                    <div class="span8 no-margin-first">
                        <label class="uni-radio"><input type="radio" name="result_type" class="uni_style" id="result_type" value="1" checked="checked">Immediate results</label>
                        <label class="uni-radio"><input type="radio" name="result_type" class="uni_style" id="result_type" value="2">Later</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group formSep" id="emailRow" style="display:none;">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <label class="span3 control-label">Email<span class="f_req">*</span></label>
                    <div class="span8 controls">
                        <input type="text" class="span5" name="email" id="email">
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="row-fluid">
                <div class="span12 form-inline">
                    <button class="btn btn-gebo" name="submit" type="submit" value="1">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
{literal}
<script type="text/javascript">

	$(document).ready(function() {
		$(".uni_style").uniform();
        	gebo_chosen.init();
		gebo_validation.reg();
	});

    $("input[name='result_type']").change(function() {
        var result_type=$('input[name=result_type]:checked').val();
        if(result_type==1)
        {
          $("#emailRow").hide();
        }
        else
        {
          $("#emailRow").show();
        }
    });

	gebo_chosen = {
            init: function(){
                $(".chzn_b").chosen({
                    allow_single_deselect: true,
                    disable_search: true
                });
                $(".chzn_c").chosen({
                    allow_single_deselect: true,
                    disable_search: true
                });
            }
        };

	//* validation
	gebo_validation = {
		reg : function() {
			reg_validator = $('.form_validation_reg').validate({
				onkeyup : false,
				errorClass : 'error',
				validClass : 'valid',
				highlight : function(element) {
					$(element).closest('div').addClass("f_error");
					$(element).closest('div').css("color", "black");
				},
				unhighlight : function(element) {
					$(element).closest('div').removeClass("f_error");
				},
				submitHandler : function(element) {
					$('#seotool-notify').show();
				},
				errorPlacement : function(error, element) {
					$('#seotool-notify').hide();
					$(element).closest('div').append(error);
					$('.error').css("font-size", "10px");
					$('.error').css("padding-top", "5px");
				},
				rules : {
					keyword : { required: true },
					"option[]" : { required: true },
                        limit: {
                          required: true,
                         min: 1,
                          digits: true
                        },
                        email: { required: function(element) {return $('input:radio[name=result_type]:checked').val()==2;}, email :true }
				},
				messages : {
					keyword : "Please enter keyword(s).",
                    "option[]" : "Please select option(s).",
                    limit : {
                          required: "Please enter limit.",
                         min: "Limit should be greater than zero.",
                          digits: "Please enter number only."
                        },
                    email: { required: "Please enter email id.", email :"Invalid email id." }
				},
				invalidHandler : function(form, validator) {
					$.sticky("There are some errors. Please corect them and submit again.", {
						autoclose : 5000,
						position : "top-center",
						type : "st-error"
					});
				}
			})
		}
	};
    
 
</script>
<style>.help-inline, .help-block {margin:0 0 0 2px !important;}</style>

{/literal}
