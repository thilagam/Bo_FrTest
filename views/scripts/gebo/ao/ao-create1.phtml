	<script>
		$(document).ready(function(){
					
			$(document).on("click","#calculation",function(){
						$(".cal_type").text($("#type option:selected").text());
						$("#calculate").modal('show');
						$("#calculate").removeClass( "hide" ).addClass("in");
			})
			
			$("#cal").validationEngine('attach',{
				onValidationComplete: function(form, status){
					if(status === true){
						var time_spent = parseInt($("#time_spent").val());
						var no_of_pack = parseInt($("#no_of_pack").val());
						var calopt = $("#caloption").val();
						if(calopt=="hour")
						{
							hours = time_spent*no_of_pack;
							minutes = 0;
						}
						else
						{
							hours = parseInt((time_spent*no_of_pack)/60);
							minutes = parseInt((time_spent*no_of_pack)%60);
						}
						$("#estimated_worktime").val(hours);
						$("#estimated_worktime_min").val(minutes);
						
						$("#calculate").modal('hide');
					}
				}
			});    
			
		});
		
